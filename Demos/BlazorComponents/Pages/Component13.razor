@page "/component13"

<h1>Events - Components (in a loop)</h1>

@for (int i = 1; i < 6; i++)
{
	/* nefunguje */
	<MyButtonComponent OnClick="() => HandleClick(i)">@i</MyButtonComponent>
}

<p>Last choice: @lastChoice</p>

@code {
	int? lastChoice;

	private void HandleClick(int value)
	{
		lastChoice = value;
	}

	private async Task HandleClickAsync(int value)
	{
		lastChoice = value;
		await Task.Yield();
	}
}
@page "/Demo6"

@{
	Logger.LogInformation(nameof(BuildRenderTree) + " i = " + i);
}

<h1>Demo6 - Events II</h1>

<input type="button" @onclick="HandleClickAsync" value="Click" />
<h4>i: @i</h4>

@code {
	int i = 0;

	[Inject] private ILogger<Demo5> Logger { get; set; }

	private /*async*/ Task HandleClickAsync()
	{
		Logger.LogInformation(nameof(HandleClickAsync));
		i++;
		return Task.CompletedTask;

		// async method +
		// 1) await Task.Yield();
		// 2) await Task.Delay(100);
	}

	protected override void OnAfterRender(bool firstRender)
	{
		Logger.LogInformation(nameof(OnAfterRender));
		base.OnAfterRender(firstRender);
	}
}